<!DOCTYPE html>
<html>
<head>
  <%- include('../template/head/admin') %>
</head>
<body>
  <nav class='navbar'>
    <%- include('../template/navbar/menu') %>
  </nav>
  <div class='lottery'>
    <section class='lottery__box'>
      <h2><%= menu.name %></h2>
      <div class='lottery__info'>
        <div class='lottery__info__detail'>
          <div class='lottery__info__content'>
            <div>品項名稱：<%= menu.name %></div>
            <div>品項價格：<%= menu.price %></div>
            <div>圖片網址：<a href=<%=`${menu.image}`%>><%= menu.image %></a></div>
          </div>
          <% if(userSessionId) { %>
            <div class='prize__modify'>
              <a class='prize__modify-btn' href=<%=`/update/${menu.id}`%>>UPDATE</a>
              <a class='prize__modify-btn' href=<%=`/delete/${menu.id}`%>>DELETE</a>
            </div>
          <% } %>
        </div>
      </div>
  </div>
  <footer>
    <%- include('../template/footer') %>
  </footer>
  <script src='index.js'></script>
</body>
</html>