<!DOCTYPE html>
<html>
<head>
  <%- include('../template/head/admin') %>
</head>
<body>
  <nav class='navbar'>
    <%- include('../template/navbar/menu') %>
  </nav>
  <div class='lottery'>
    <section class='lottery__box'>
      <h2>菜單管理</h2>
      <div class='lottery__info'>
        <div class='lottery__info__title'>菜單列表：</div>
          <% for(const menu of menus) { %>
            <div class='lottery__info__detail'>
              <div class='lottery__info__content'>
                <div class='Prize_name'><%= menu.name %></div>
              </div>
              <% if(userSessionId) { %>
                <div class='menu__info__modify'>
                  <a class='prize__modify-btn' href=<%=`/menu/${menu.id}`%>>MORE</a>
                  <a class='prize__modify-btn' href=<%=`/menu/update/${menu.id}`%>>UPDATE</a>
                  <a class='prize__modify-btn' href=<%=`/menu/delete/${menu.id}`%>>DELETE</a>
                </div>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
  </div>
  <footer>
    <%- include('../template/footer') %>
  </footer>
</body>
</html>