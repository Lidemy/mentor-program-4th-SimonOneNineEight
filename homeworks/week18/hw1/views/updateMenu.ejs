<!DOCTYPE html>
<html>
<head>
  <%- include('../template/head/admin') %>
</head>
<body>
  <nav class='navbar'>
    <%- include('../template/navbar/menu') %>
  </nav>
  <div class='lottery'>
    <section class='lottery__box'>
      <h2>編輯品項</h2>
      <div class='login__info'>
        <form method='POST' action=<%=`/menu/update/${menu.id}`%>>
          <div class="input__wrapper">
            <div class="input__label">品項名稱：</div>
            <input class="input__field" type="text" name="name" value=<%= `${menu.name}` %> />
          </div>
          <div class="input__wrapper">
            <div class="input__label">品項價格：</div>
            <input class="input__field" type="text" name="price" value=<%= `${menu.price}` %> />
          </div>
          <div class="input__wrapper">
            <div class="input__label">圖片：</div>
            <input class="input__field" type="text" name="image" value=<%= `${menu.image}` %> />
          </div>
          <input type='submit' value="確認編輯" class='login_btn' />
        </form>
        </div>
        <% if(errorMessage) { %>
          <div class='errorMessage'><%= errorMessage %></div>
        <% } %>
      </div>
  </div>
  <footer>
    <%- include('../template/footer') %>
  </footer>
  <script src='index.js'></script>
</body>
</html>