<!DOCTYPE html>
<html>
<head>
  <%- include('../template/head') %>
</head>
<body>
  <div class='navbar'>
    <div class='nav_site-name_and_catalog'>
      <a href='/blog' class='nav_site-name'>BLOG</a>
      <div class='nav_catalog'>
        <a href='/blog'>文章列表</a>
        <a href='#'>分類專區</a>
        <a href='#'>關於我</a>
      </div>
    </div>
    <div class='user_option'>
      <a href='/addArticle'>新增文章</a>
      <a href='/logout'>登出</a>
    </div>
  </div>
  <div class='welcome-block'>
    <%- include('../template/welcomeBlock') %>
  </div>
  <div class='site-body'>
    <div class='board'>
      <% for (const article of articles) { %>
        <section class='admin_article'>
          <div class='admin_article_detail'>
          <h1><a href=<%= `/article/${article.id}`%>><%=article.title%></a></h1>
            <div class='modify-btn'>
              <span class='admin_created_at'><%=article.createdAt%></span>
              <a href=<%= `/update/${article.id}`%>>編輯</a>
              <a href=<%= `/delete/${article.id}`%>>刪除</a>
            </div>
          </div>
        </section>
      <% } %>
    </div>
  </div>
  <div class='footer'>
    <%- include('../template/footer') %>
  </div>
</body>
</html>
